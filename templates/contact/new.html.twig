{% extends 'base.html.twig' %}

{% block title %}Ceci est un test {% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
<!-- Page Content -->

<div class="content container-fluid">

    <!-- Page Header -->
    <div class="page-header">
        <div class="row">
            <div class="col">
                <h3 class="page-title">Formulaire contact</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Contact</a></li>
                    <li class="breadcrumb-item active">Ajouter un contact</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /Page Header -->

    <div class="row justify-content-center"> 
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">Ajouter un contact</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
                        <div class="form-group">
                            <label>Nom</label>
                            {{ form_widget(form.nom) }}
                        </div>
                        <div class="form-group">
                            <label>Pr√©noms</label>
                            {{ form_widget(form.prenom) }}
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            {{ form_widget(form.email) }}
                        </div>
                        <div class="form-group">
                            <label>Telephone</label>
                            {{ form_widget(form.telephone) }}
                        </div>
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                        {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    
</div>
</div>
<!-- /Page Wrapper -->

</div>
<!-- /Main Wrapper -->

<!-- /Page Content -->

{% endblock %}
