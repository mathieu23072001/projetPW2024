{% extends 'base.html.twig' %}

{% block title %}Ceci est un test {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofT8+cu5FvXAZ+O7aI47tq+76RMEb7E2x" crossorigin="anonymous">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
<!-- Page Content -->

<!-- Page Content -->
                <div class="content container-fluid">

                   
				
					<!-- Page Header -->
					<div class="page-header">
						<div class="row align-items-center">
							<div class="col">
								<h3 class="page-title">Details du message envoy√©</h3>
								<ul class="breadcrumb">
									<li class="breadcrumb-item"><a href="#">Tableau de bord</a></li>
									<li class="breadcrumb-item active">Details du message</li>
								</ul>
							</div>
							<div class="col-auto float-right ml-auto">
								<a href="{{path('app_mail_contact_new')}}" class="btn add-btn"><i class="fa fa-plus"></i> Compose</a>
							</div>
						</div>
					</div>
					<!-- /Page Header -->
			
					<div class="row">
						<div class="col-sm-12">
							<div class="card mb-0">
								<div class="card-body">
									<div class="mailview-content">
										<div class="mailview-header">
											<div class="row">
												<div class="col-sm-9">
													<div class="text-ellipsis m-b-10">
														<span class="mail-view-title">{{mail_contact.objet}}</span>
													</div>
												</div>
												<div class="col-sm-3">
													<div class="mail-view-action">
														<div class="btn-group">
															<button type="button" class="btn btn-white btn-sm" data-toggle="tooltip" title="Delete"> <i class="fa fa-trash-o"></i></button>
															<button type="button" class="btn btn-white btn-sm" data-toggle="tooltip" title="Reply"> <i class="fa fa-reply"></i></button>
															<button type="button" class="btn btn-white btn-sm" data-toggle="tooltip" title="Forward"> <i class="fa fa-share"></i></button>
														</div>
														<button type="button" class="btn btn-white btn-sm" data-toggle="tooltip" title="Print"> <i class="fa fa-print"></i></button>
													</div>
												</div>
											</div>
											<div class="sender-info">
												<div class="sender-img">
													<img width="40" alt="" src="assets/img/profiles/avatar-02.jpg" class="rounded-circle">
												</div>
												<div class="receiver-details float-left">
													<span class="sender-name">Admin (admin@example.com)</span>
													<span class="receiver-name">
														to
														<span>me</span>, {% for contact in mail_contact.contacts %} <span>{{ contact.nom }} {{ contact.prenom }}</span>, {% endfor %}
													</span>	
												</div>	
												<div class="mail-sent-time">
													<span class="mail-time">{{ mail_contact.dateEnvoi ? mail_contact.dateEnvoi|date('Y-m-d H:i:s') : '' }}</span>
												</div>
												<div class="clearfix"></div>
											</div>
										</div>
										<div class="mailview-inner">
											<p>Salut,</p>
											<p>{{mail_contact.message}}</p>
											<p></p>
											<p>Cordialement,<br>
											Admin</p>
										</div>
									</div>
									
									<div class="mailview-footer">
										<div class="row">
											<div class="col-sm-6 left-action">
												<button type="button" class="btn btn-white"><i class="fa fa-reply"></i> Reply</button>
												<button type="button" class="btn btn-white"><i class="fa fa-share"></i> Forward</button>
											</div>
											<div class="col-sm-6 right-action">
												<button type="button" class="btn btn-white"><i class="fa fa-print"></i> Print</button>
												<a href="{{ path('app_mail_contact_delete', {'id': mail_contact.id}) }}"><button type="button" class="btn btn-white" ><i class="fa fa-trash-o"></i> Delete</button></a>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
                </div>
				<!-- /Page Content -->
				
			</div>
			<!-- /Page Wrapper -->
			
        </div>
		<!-- /Main Wrapper -->
                


<!-- /Page Content -->

{% endblock %}
